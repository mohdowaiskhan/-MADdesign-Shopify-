<section class="content content-area customer login">

  {% render 'breadcrumbs' %}

  <div class="page-title">
    <span class="label">{{ 'customer.login.header' | t }}</span>
  </div>
  <div class="row">
   <div class="col-md-6 col-12">
  <h1>Customer Login</h1>
  <div id="customer-login" class="account-form">
    {% form 'customer_login' %}

      {% if form.errors %}
        <div class="error-message"><span>{{ 'customer.login.error' | t }}</span></div>
      {% endif %}

      <div class="field-wrap email">
        <label>{{ 'general.email' | t }}</label>
        <input type="text" placeholder="{{ 'general.email_placeholder' | t }}" value="" name="customer[email]" class="field">
      </div>

      <div class="field-wrap password">
        <label>{{ 'general.password' | t }}</label>
        <input type="password" name="customer[password]" class="field">
      </div>

      <input type="submit" class="action-button submit-button" value="{{ 'general.submit' | t }}">
      <a class="forgot-password helper" href="#recover" onclick="showRecoverPasswordForm()">{{ 'customer.login.forgot_password' | t }}</a>

    {% endform %}

    {% if shop.checkout.guest_login %}
      <div class="secondary-wrap">
      {% form 'guest_login' %}
        <p class="guest-login"><a href="#">{{ 'customer.guest_login.submit' | t }}</a> {{ 'customer.guest_login.no_login' | t }}</p>
      {% endform %}
      </div>
    {% else %}
      <div class="secondary-wrap">
        <p>{{ 'customer.login.new_customer' | t }} <a href="{{ routes.account_register_url }}">{{ 'customer.login.sign_up' | t }}</a></p>
      </div>
    {% endif %}
  </div>
     <hr>
  <div id="recover-password" class="account-form">
    {% form 'recover_customer_password' %}

      <p class="message">{{ 'customer.reset_password.subtext' | t }}</p>

      {% if form.errors %}
        <div class="error-message"><span>{{ form.errors | default_errors }}</span></div>
      {% endif %}

      <div class="field-wrap email">
        <label>{{ 'general.email' | t }}</label>
        <input type="text" placeholder="{{ 'general.email_placeholder' | t }}" value="" name="email" class="field">
      </div>

      <input type="submit" class="action-button submit-button" value="{{ 'general.submit' | t }}">
      <a class="forgot-password helper" href="#recover" onclick="hideRecoverPasswordForm()"><span>{{ 'customer.general.or' | t }} </span>{{ 'customer.general.cancel' | t }}</a>

    {% endform %}
  </div>
  </div>
    
  <div class="col-md-6 col-12">
  <form method="post" action="/account/login" id="customer_login" accept-charset="UTF-8" onsubmit="window.Shopify.recaptchaV3.addToken(this, &quot;customer_login&quot;); return false;">
    <input type="hidden" name="form_type" value="customer_login">
    <input type="hidden" name="utf8" value="âœ“">

      

      <h1 id="wsg-title" data-translation-selector="loginH1">Wholesale Login</h1>
      <p id="wsg-login-desc"></p>

           <!--SIGN UP-->
      <p id="wsg-signup-link">
        
          <a href="/pages/ws-account-create" data-translation-selector="signupLinkA">Need an account? Sign up here.</a>
        
      </p>
      <div>
      <label for="customer_email" class="hidden-label" data-translation-selector="labelEmail">Email</label></div>
      <div><input class="wsg-input-full wsg-login-input" type="email" value="" name="customer[email]" id="customer_email" placeholder="Email" autocorrect="off" autocapitalize="off" data-translation-selector="placeEmail">
      </div>

      <div class="mt_30">
      <label for="customer_password" class="hidden-label" data-translation-selector="labelPassword">Password</label></div>
      <div><input class="wsg-input-full wsg-login-input" type="password" value="" name="customer[password]" id="customer_password" placeholder="Password" data-translation-selector="placePassword">
      </div><br>
        <div><p>
      <input type="submit" class="btn wsg-submit-copy wsg-button-fix button action-button" value="Sign In" data-translation-selector="signinButton">
      </p></div>
       
      <!--FORGOT PASSWORD-->
      <p>
        <a href="#" onclick="showRecoverPasswordForm();return false;" data-translation-selector="forgotPasswordLink">Forgot your password?</a>
      </p>
      </form>
  </div>
  <script type="text/javascript">

    if (window.location.hash == '#recover') { showRecoverPasswordForm() }

    function showRecoverPasswordForm() {
      document.getElementById('recover-password').style.display = 'block';
      document.getElementById('customer-login').style.display='none';
      window.location.hash = '#recover';
      return false;
    }

    function hideRecoverPasswordForm() {
      document.getElementById('recover-password').style.display = 'none';
      document.getElementById('customer-login').style.display = 'block';
      return false;
    }

  </script>
    <style>
      input#customer_email {
    width: 42%;
}
      input#customer_password {
    width: 42%;
}
      .mt_30 {
    margin-top: 27px;
}
      .row {
    text-align: center;
}
    </style>

</section>
